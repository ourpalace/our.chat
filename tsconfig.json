{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": [
        "es6"
      ],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "strictNullChecks": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true
    },
    "include": ["src/**/*"]
}